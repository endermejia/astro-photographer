---
import { getLangFromUrl, getRouteFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

interface Props {
	path?: string;
}
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
const route = getRouteFromUrl(Astro.url);
---

<section id="photos">
	<h2 class="screen-reader-text">{t('photos.title')}</h2>
	<a href={translatePath(`/${route ? route : 'albums/climbing'}`, lang)} class="primary">
		<h3>{t('photos.climbing')}</h3>
		<picture>
			<source
				srcset="/assets/img/albums/climbing-400.avif 400w, /assets/img/albums/climbing-1920.avif"
				type="image/avif"
			/>
			<source
				srcset="/assets/img/albums/climbing-400.webp 400w, /assets/img/albums/climbing-1920.webp"
				type="image/webp"
			/>
			<source
				srcset="/assets/img/albums/climbing-400.jpg 400w, /assets/img/albums/climbing-1920.jpg"
				type="image/jpg"
			/>
			<img src="/assets/img/albums/climbing-400.jpg" width="6240" height="4160" loading="lazy" alt="" />
		</picture>
	</a>
	<a href={translatePath(`/${route ? route : 'albums/people'}`, lang)} class="primary">
		<h3>{t('photos.people')}</h3>
		<picture>
			<source
				srcset="/assets/img/albums/people-400.avif 400w, /assets/img/albums/people-1920.avif"
				type="image/avif"
			/>
			<source
				srcset="/assets/img/albums/people-400.webp 400w, /assets/img/albums/people-1920.webp"
				type="image/webp"
			/>

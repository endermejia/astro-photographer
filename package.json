{
	"name": "nhoanoir.com",
	"type": "module",
	"version": "1.0.0",
	"private": true,
	"description": "Nhoa Noir | Fotografía",
	"keywords": [
		"website",
		"fotografía",
		"photography"
	],
	"homepage": "https://nhoanoir.com",
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=8.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.26.7",
		"@babel/preset-env": "^7.26.7",
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@csstools/postcss-oklab-function": "^4.0.7",
		"@hint/formatter-codeframe": "^3.1.36",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@typescript-eslint/eslint-plugin": "^8.22.0",
		"@typescript-eslint/parser": "^8.22.0",
		"autoprefixer": "^10.4.20",
		"babel-loader": "^9.2.1",
		"browserslist": "^4.24.4",
		"concurrently": "^9.1.2",
		"cssnano": "^7.0.6",
		"cssremedy": "^0.1.0-beta.2",
		"eslint": "^8.57.0",
		"eslint-plugin-compat": "^4.2.0",
		"hint": "^7.1.13",
		"husky": "^9.1.7",
		"image-size": "^1.2.0",
		"postcss": "^8.5.1",
		"postcss-loader": "^8.1.1",
		"postcss-nesting": "^13.0.0",
		"postcss-preset-env": "^10.1.3",
		"prettier": "^3.3.3",
		"semantic-release": "^24.2.1",
		"sharp": "^0.33.5",
		"stylelint": "^16.12.0",
		"stylelint-config-property-sort-order-smacss": "^10.0.0",
		"stylelint-config-standard": "^36.0.1",
		"stylelint-order": "^6.0.4",
		"stylelint-use-logical-spec": "^5.0.1",
		"typescript": "^5.7.3",
		"vite": "^6.0.11",
		"wait-on": "^8.0.2"
	},
	"optionalDependencies": {
		"lint-staged": "^15.4.3"
	},
	"scripts": {
		"start": "astro dev",
		"start:prod": "astro preview",
		"build": "astro build",
		"build:img": "node src/utils/sharp.cjs",
		"lint": "concurrently 'npm:lint:*(!fix)'",
		"lint:fix": "concurrently -m 1 'npm:lint:*:fix'",
		"lint:js": "eslint \"src/**/*.{js,mjs,cjs,ts}\" --no-error-on-unmatched-pattern --ignore-path .gitignore",
		"lint:js:fix": "eslint \"src/**/*.{js,mjs,cjs,ts}\" --no-error-on-unmatched-pattern --ignore-path .gitignore --fix",
		"lint:css": "stylelint \"src/**/*.{css,less,sass,scss}\" --aei --ignore-path .gitignore",
		"lint:css:fix": "stylelint \"src/**/*.{css,less,sass,scss}\" --aei --ignore-path .gitignore --fix",
		"lint:style": "prettier --check --ignore-unknown .",
		"lint:style:fix": "prettier --write --ignore-unknown .",
		"hint": "wait-on -t 300000 http://localhost:4321/ && hint http://localhost:4321/",
		"test": "concurrently 'npm:test:*'",
		"test:hint": "concurrently \"npm:start:prod\" \"npm:hint\" --kill-others  --s first"
	},
	"dependencies": {
		"@astrojs/sitemap": "^3.2.1",
		"@fontsource/cinzel": "^5.1.1",
		"@fontsource/playfair-display": "^5.1.1",
		"@fontsource/raleway": "^5.1.1",
		"@fontsource/titillium-web": "^5.1.1",
		"astro": "^5.2.1"
	}
}
